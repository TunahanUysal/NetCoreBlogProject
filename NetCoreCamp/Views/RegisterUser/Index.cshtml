@model UserSignUpViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>INSPINIA | Register</title>

    <link href="~/admintema/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/admintema/font-awesome/css/font-awesome.css" rel="stylesheet">
    <link href="~/admintema/css/plugins/iCheck/custom.css" rel="stylesheet">
    <link href="~/admintema/css/animate.css" rel="stylesheet">
    <link href="~/admintema/css/style.css" rel="stylesheet">

</head>

<body class="gray-bg">

    <div class="middle-box text-center loginscreen   animated fadeInDown">
        <div>
            <div>

                <h1 class="logo-name">IN+</h1>

            </div>
            <h3>Register to IN+</h3>
            <p>Create account to see it in action.</p>
            <form class="m-t" role="form" asp-action="Index" method="post">
                <div class="form-group">
                    <span asp-validation-for="@Model.nameSurname" class="text-danger"></span>
                    <input type="text" class="form-control" asp-for="@Model.nameSurname" placeholder="Name" >
                </div>
                <div class="form-group">
                    <span asp-validation-for="@Model.Mail" class="text-danger"></span>
                    <input type="email" class="form-control" asp-for="@Model.Mail" placeholder="Email" >
                </div>
                <div class="form-group">
                    <span asp-validation-for="@Model.Username" class="text-danger"></span>
                    <input type="text" class="form-control" asp-for="@Model.Username" placeholder="Username" >
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" asp-for="@Model.Password" placeholder="Password" required="">
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" asp-for="@Model.ConfirmPassword" placeholder="ConfirmPassword" required="">
                </div>
                <div class="form-group">
                    <div class="checkbox i-checks"><label> <input type="checkbox" asp-for="@Model.IsAcceptCheckBox"><i></i> Agree the terms and policy </label></div>
                </div>
                <button type="submit" class="btn btn-primary block full-width m-b">Register</button>
                
                <p class="text-muted text-center"><small>Already have an account?</small></p>
                <a class="btn btn-sm btn-white btn-block" href="/Login/LoginIndex/">Login</a>
                <div class="text-danger" asp-validation-summary="ModelOnly">

                </div>
            </form>
            <p class="m-t"> <small>Inspinia we app framework base on Bootstrap 3 &copy; @DateTime.Now.Year</small> </p>
        </div>
    </div>

    <!-- Mainly scripts -->
    <script src="~/admintema/js/jquery-3.1.1.min.js"></script>
    <script src="~/admintema/js/popper.min.js"></script>
    <script src="~/admintema/js/bootstrap.js"></script>
    <!-- iCheck -->
    <script src="~/admintema/js/plugins/iCheck/icheck.min.js"></script>
    <script>$(document).ready(function(){
            $('.i-checks').iCheck({
                checkboxClass: 'icheckbox_square-green',
                radioClass: 'iradio_square-green',
            });
        });</script>
</body>

</html>
