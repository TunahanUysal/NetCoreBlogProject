@model EntityLayer.Concrete.Blog
@{
    ViewData["Title"] = "BlogEdit";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<h1>Blog Edit</h1>
<br />
@using (Html.BeginForm("BlogEdit", "Blog", FormMethod.Post))
{
    @Html.HiddenFor(x=>x.BlogId)
    @Html.HiddenFor(x=>x.BlogCreateDate)
    @Html.HiddenFor(x=>x.BlogStatus)

    @Html.Label("Blog Başlığı")
    @Html.TextBoxFor(x => x.BlogTitle, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.BlogTitle)
    <br />
    @Html.Label("Blog Görseli")
    @Html.TextBoxFor(x => x.BlogTmage, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.BlogTmage)
    <br />
    @Html.Label("Blog Küçük Görsel")
    @Html.TextBoxFor(x => x.BlogThumbnailImage, new { @class = "form-control" })
    <br />
    @Html.Label("Kategori")
    @Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)ViewBag.listofcategory, new { @class = "form-control" })
    <br />
    @Html.Label("Blog İçeriği")
    @Html.TextAreaFor(x => x.BlogContent, 3, 10, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.BlogContent)
    <br />
    <button type="submit" class="btn btn-info">Değişiklikleri Kaydet</button>


}


