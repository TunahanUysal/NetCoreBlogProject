@model IEnumerable<EntityLayer.Concrete.Comment>
<div class="comment-top">

    <h4>Comments</h4>
    <br />
    @if (Model.Count() == 0)
    {
        <h5 style="color:darkseagreen;" >Daha önce yorum yapılmamış. İlk yapan sen ol!</h5>

    }
    else
    {
        @foreach (var item in Model)
        {
            <div class="media">



                <div class="media mt-3">
                    <a class="d-flex pr-3" href="#">
                        <img src="~/CoreBlogTema/images/t2.jpg" alt="" class="img-fluid" />
                    </a>
                    <div class="media-body">
                        <h5 class="mt-0">@item.CommentUserName</h5>
                        <p>
                            @item.CommentContent
                        </p>
                    </div>
                </div>
                <br />
            </div>

        }

    }

</div>
