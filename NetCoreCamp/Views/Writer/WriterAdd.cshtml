@model NetCoreCamp.Models.AddImageProfile
@{
    ViewData["Title"] = "WriterAdd";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<form class="form-group" method="post" enctype="multipart/form-data">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Profilim</h4>

                <div class="forms-sample">
                    <div class="form-group">
                        @Html.HiddenFor(x => x.WriterId)
                        <label for="exampleInputName1">Yazar Adı Soyadı</label>
                        <input type="text" class="form-control" id="exampleInputName1" asp-for="WriterName" placeholder="Name">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail3">Mail Adresi </label>
                        <input type="email" class="form-control" id="exampleInputEmail3" asp-for="WriterMail" placeholder="Email">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword4">Password</label>
                        <input type="text" class="form-control" id="exampleInputPassword4" asp-for="WriterPassword" placeholder="Password">
                    </div>

                    <div class="form-group">
                        <label>Yazar Görsel</label>
                        <input type="file" name="WriterImage" class="btn-danger btn-facebook"/>
                    </div>

                    <div class="form-group">
                        <label for="exampleTextarea1">Yazar Hakkında</label>
                        <textarea class="form-control" id="exampleTextarea1" asp-for="WriterAbout" rows="4"></textarea>
                    </div>
                    <button type="submit" class="btn btn-gradient-primary mr-2">Güncelle</button>
                    <button class="btn btn-light">İptal Et</button>
                </div>
            </div>
        </div>
    </div>
</form>

