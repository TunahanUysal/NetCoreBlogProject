@using X.PagedList
@using X.PagedList.Mvc.Core
@model IPagedList<EntityLayer.Concrete.Category>
@{
    ViewData["Title"] = "CategoryIndex";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<table class="table table-bordered">
    <thead>

        <tr>
            <th>#</th>
            <th>Kategori Adı</th>
            <th>Aktif Yap</th>
            <th>Pasif Yap</th>
            <th>Düzenle</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th>@item.CategoryId</th>
                <td>@item.CategoryName</td>
                <td><a href="#" class="btn btn-success">Aktif Yap</a></td>
                <td><a href="/Admin/Category/DeleteCategory/@item.CategoryId" onclick="return confirm('Silmek istediğinize emin misiniz?')" class="btn btn-warning">Pasif Yap</a></td>
                <td><a href="#" class="btn btn-info">Düzenle</a></td>
            </tr>

        }
    </tbody>
    
     
    
</table>
<br />
<a href="/Admin/Category/AddCategory/" class="btn btn-primary">Kategori Ekle</a>
<a href="/Admin/Category/ExportExcelFile/" class="btn btn-outline-dark">Excel Dosyası oluştur</a>
<br /><br />
@Html.PagedListPager((IPagedList)Model,page=>Url.Action("CategoryIndex",new  { page}))

